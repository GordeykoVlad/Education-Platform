
@model EducationPlatform.ViewModels.Exam.ResultModel
@{
    Layout = "~/Views/Shared/_Navbar.cshtml";
    var i = 1;
}

<div class="container">

    <div class="panel panel-default">
        <div class="panel-heading"><h4> Уровень: @Model.Course.Name</h4></div>
        <div class="list-group">
            @foreach (var qa in Model.ResultData)
        {
            <div class="list-group-item">
                
                    @i
                    @qa.Key.Text
                    @qa.Value.Text
                    @if (qa.Value.IsCorrect == true)

    {


                <span class="glyphicon glyphicon-ok" style="color:forestgreen"></span>
}
else
{
                <span class="glyphicon glyphicon-remove" style="color:orangered"></span>
}
                
               
            </div>
        i++;
    }
        </div>
        <div class="panel-body">
           <h3> Вы набрали @Model.Mark баллов из @Model.ResultData.Count</h3>
        </div>
        <div class="panel-footer">

            <a class="btn btn-primary btn-lg btn-block" href="@Url.Action("Language", "Exam")" role="button">Назад к курсам</a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>

